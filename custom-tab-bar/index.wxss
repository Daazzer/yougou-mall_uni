.tab-bar {
  display: flex;
  justify-content: space-around;
  align-items: center;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 113rpx;
  padding-bottom: constant(safe-area-inset-bottom);  /* 兼容 iOS 11 */
  padding-bottom: env(safe-area-inset-bottom); /* 兼容 iOS 11.2beta+ */
  background-color: #fafafa;
}
.tab-bar-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 23rpx;
  color: #8c8d8d;
}
.tab-bar-item.selected {
  font-weight: 600;
  color: #e03440;
}
.tab-bar-item__image {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 7.3rpx;
}
